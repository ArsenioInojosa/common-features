{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "emitBOM": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "paths": {
      "@/*": [ "Modules/*" ],
      "@serenity-is/*": [ "node_modules/@serenity-is/*/dist/index" ]
    },
    "preserveConstEnums": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "../../Serenity/src/Serenity.Scripts/types"
    ]
  },
  "typeAcquisition": {
    "enable": false
  }
}
