{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ESNext",
    "moduleResolution": "Node",
    "preserveSymlinks": true,
    "newLine": "lf",
    "noEmitHelpers": true,
    "paths": {
      "@/*": [ "Modules/*" ]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6",
    "typeRoots": [
      "../../../Serenity/src/Serenity.Scripts/types"
    ]
  }
}
