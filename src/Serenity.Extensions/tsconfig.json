{
  "extends": "../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "isolatedModules": true,
    "module": "ESNext",
    "outDir": "./out",
    "emitDeclarationOnly": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [ "Serenity.Extensions/*" ]
    }
  },
  "include": [
    "./Serenity.*/**/*"
  ]
}
