@{
    ViewData["Title"] = "Enabling Row Selection";
}

@section ContentHeader {
    <h1>@ViewData["Title"]<small></small></h1>
}

<div class="alert alert-info alert-dismissable alert-dismissible fade show">
    <button type="button" class="close btn-close" data-dismiss="alert" data-bs-dismiss="alert" aria-hidden="true">&times;</button>
    <p>
        Sometimes you might want to let user highlight a SlickGrid row. For this, you just need to
        derive your grid from SelectableEntityGrid instead of EntityGrid.
    </p>
    <p>
        You might also apply code in @Html.BasicSamplesSourceFile("/Serenity.Extensions/Serenity.Extensions/Widgets/SelectableEntityGrid.ts") manually to 
        an existing grid class without having to change the base type.
    </p>
    <p>
        This sample also enables the text selection (e.g. copy/paste) in SlickGrid.
        Thanks to @@marcobisio for the original sample in GitHub.
    </p>

    <p style="text-align: right;"><b>Source Files:</b> 
        @Html.BasicSamplesSourceFile("Index.cshtml"), 
        @Html.BasicSamplesSourceFile("EnablingRowSelectionPage.ts"),
        @Html.BasicSamplesSourceFile("/Serenity.Extensions/Serenity.Extensions/Widgets/SelectableEntityGrid.ts")
    </p>
</div>

<div id="GridDiv"></div>

<script type="module">
    import pageInit from '@Html.ResolveWithHash(Html.BasicSamplesModuleFile("EnablingRowSelectionPage.js"))';
    pageInit();
</script>